<div class="b-column__wrapper u-clear-fix">
  <div class="b-column b-column__three b-column__three_long">
<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
    <label class="checkbox"><%= f.check_box :remember_me %> <%= t('Remember me') %></label>
  <% end -%>

  <%= f.submit "Sign in", :class => 'b-enter', :style => 'border:none' %>
<% end %>
<%- if controller_name != 'sessions' %>
  <%= link_to "Sign in", new_session_path(resource_name) %>
<% end -%>
  <%= render "devise/omniauth" %>
  <%= render :partial => "devise/shared/links" %>
  </div>
</div>